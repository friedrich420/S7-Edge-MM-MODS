                    <item android:drawable="@drawable/ic_wifi_signal_shift_4" android:maxLevel="4" />
                    <item android:drawable="@drawable/ic_wifi_signal_no" android:maxLevel="5" />
                </level-list>
            </item>
        </layer-list>
    </item>
