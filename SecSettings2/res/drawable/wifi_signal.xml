<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <item settings:state_encrypted="true" settings:state_wifi_giga="false">
        <level-list>
            <item android:drawable="@drawable/ic_wifi_signal_lock_0" android:maxLevel="0" />
            <item android:drawable="@drawable/ic_wifi_signal_lock_1" android:maxLevel="1" />
            <item android:drawable="@drawable/ic_wifi_signal_lock_2" android:maxLevel="2" />
            <item android:drawable="@drawable/ic_wifi_signal_lock_3" android:maxLevel="3" />
