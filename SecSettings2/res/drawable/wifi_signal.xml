                    <item android:drawable="@drawable/ic_wifi_signal_no" android:maxLevel="5" />
                </level-list>
            </item>
        </layer-list>
    </item>
    <item settings:state_encrypted="false" settings:state_wifi_giga="true">
        <layer-list>
            <item>
                <level-list>
                    <item android:drawable="@drawable/ic_wifi_signal_shift_0" android:maxLevel="0" />
