<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:id="@android:id/background">
                <nine-patch android:src="@drawable/scrubber_primary_mtrl_alpha" android:tint="@color/brightness_controller_seekbar_color_disabled_bg" />
            </item>
            <item android:id="@android:id/progress">
                <scale android:scaleWidth="100%">
                    <nine-patch android:src="@drawable/scrubber_primary_mtrl_alpha" android:tint="@color/brightness_controller_seekbar_color_disabled" />
                </scale>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <nine-patch android:src="@drawable/scrubber_primary_mtrl_alpha" android:tint="@color/brightness_controller_seekbar_color_normal" />
            </item>
            <item android:id="@android:id/secondaryProgress">
                <scale android:scaleWidth="100%">
                    <nine-patch android:src="@drawable/scrubber_primary_mtrl_alpha" android:tint="@color/brightness_controller_seekbar_color_normal" />
                </scale>
            </item>
            <item android:id="@android:id/progress">
                <scale android:scaleWidth="100%">
                    <nine-patch android:src="@drawable/scrubber_primary_mtrl_alpha" android:tint="@color/brightness_controller_seekbar_color_activated" />
                </scale>
            </item>
        </layer-list>
    </item>
</selector>